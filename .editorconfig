root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8

[*.md]
trim_trailing_whitespace = false
.btn {
  display: inline-flex;
  padding: 8px 12px;
  border-radius: 4px;
  border: none;
  font: inherit;
  cursor: pointer;
  background-color: #e2e5e8;
  color: inherit;
}

.btn.isSelected {
  background-color: #1976d2;
  color: #fff;
}

.btn:hover {
  background-color: #1976d2;
  color: #fff;
}

.btn:active {
  background-color: #1565c0;
  color: #fff;
}